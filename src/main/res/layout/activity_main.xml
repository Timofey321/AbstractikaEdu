<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ton.hack.abstracktika.MainActivity">

    <Button
        android:id="@+id/adventure"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:text="Приключение"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:layout_width="164dp"
        android:layout_height="19dp"
        android:text="Скоро здесь будет игра!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/exit"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:text="выход"
        android:layout_marginBottom="423dp"
        app:layout_constraintBottom_toTopOf="@+id/dungeon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView" />

    <Button
        android:id="@+id/dungeon"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="подземелье"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <Button
        android:id="@+id/teacher"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Сенсей"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        tools:layout_editor_absoluteY="117dp" />


</android.support.constraint.ConstraintLayout>
