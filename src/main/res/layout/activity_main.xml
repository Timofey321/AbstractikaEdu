<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung"
    tools:context="com.ton.hack.abstracktika.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/adventure"
        android:layout_width="318dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"

        android:text="Приключение"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/teacher"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/dungeon"
        android:layout_width="340dp"
        android:layout_height="50dp"

        android:layout_marginTop="8dp"
        android:text="подземелье"

        app:layout_constraintBottom_toTopOf="@+id/teacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="DuplicateIds" />


    <Button
        android:id="@+id/teacher"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:text="Сенсей"

        app:layout_constraintBottom_toTopOf="@+id/adventure"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dungeon" />


    <Button
        android:id="@+id/Settings"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Настройки"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adventure"
        tools:ignore="MissingConstraints"

        />

</android.support.constraint.ConstraintLayout>
