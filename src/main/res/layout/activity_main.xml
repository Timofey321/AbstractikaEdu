<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung"
    tools:context="com.ton.hack.abstracktika.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/adventure"
        android:layout_width="231dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="Приключение"
        app:layout_constraintBottom_toTopOf="@+id/dungeon"
        app:layout_constraintEnd_toEndOf="@+id/dungeon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dungeon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/dungeon"
        android:layout_width="227dp"
        android:layout_height="45dp"

        android:layout_marginBottom="52dp"
        android:text="подземелье"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toEndOf="@+id/Settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/Settings"
        tools:ignore="DuplicateIds" />


    <Button
        android:id="@+id/teacher"
        android:layout_width="222dp"
        android:layout_height="42dp"

        android:layout_marginBottom="48dp"
        android:text="Сенсей"
        app:layout_constraintBottom_toTopOf="@+id/hero"
        app:layout_constraintEnd_toEndOf="@+id/hero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hero" />


    <Button
        android:id="@+id/Settings"
        android:layout_width="238dp"
        android:layout_height="50dp"

        android:layout_marginBottom="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="36dp"
        android:text="Настройки"
        app:layout_constraintBottom_toTopOf="@+id/teacher"
        app:layout_constraintEnd_toEndOf="@+id/teacher"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/teacher"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/hero"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="о персонаже"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/info"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/info" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</android.support.constraint.ConstraintLayout>
